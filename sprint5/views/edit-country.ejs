<h1>Editar País: <%= country.name.official %></h1>

<form action="/countries/edit/<%= country._id %>" method="POST">
    <!-- Nombre oficial en español -->
    <label for="name">Nombre (Oficial en Español):</label>
    <input type="text" id="name" name="name" value="<%= country.name.official || country.name_common %>" required>

    <!-- Capital -->
    <label for="capital">Capital:</label>
    <input type="text" id="capital" name="capital" value="<%= country.capital ? country.capital.join(', ') : '' %>" required>

    <!-- Fronteras -->
    <label for="borders">Fronteras:</label>
    <input type="text" id="borders" name="borders" value="<%= country.borders ? country.borders.join(', ') : '' %>" required>

    <!-- Área -->
    <label for="area">Área:</label>
    <input type="number" id="area" name="area" value="<%= country.area %>" required>

    <!-- Población -->
    <label for="population">Población:</label>
    <input type="number" id="population" name="population" value="<%= country.population %>" required>

    <!-- Botón para enviar -->
    <button type="submit">Guardar Cambios</button>

    <!-- Botón para volver atrás -->
    <a href="/countries/list" class="back-button">Volver Atrás</a>
</form>
