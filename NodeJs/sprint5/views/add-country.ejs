<main>

    <form action="/countries/add" method="POST">
        <label for="name">Nombre:</label>
        <input type="text" id="name_common" name="name" required>

        <label for="capital">Capital:</label>
        <input type="text" id="capital" name="capital" required>

        <label for="borders">Fronteras (separadas por coma):</label>
        <input type="text" id="borders" name="borders" required>

        <label for="area">Área:</label>
        <input type="number" id="area" name="area" required>

        <label for="population">Población:</label>
        <input type="number" id="population" name="population" required>


        <button type="submit">Agregar País</button>
    </form>

    <a href="/list" class="back-button">Volver Atrás</a>
</main>
